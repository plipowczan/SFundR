@{
    ViewData["Title"] = "Project Details";
}
@model SFundR.Web.ViewModels.ProjectViewModel
<h2>Project (MVC View)</h2>

<h3>Name: @Model?.Name</h3>

<b>Items:</b>

<ul>
    @if (Model?.Items != null)
    {
        @foreach (var item in Model.Items)
        {
            <li>
                @item.Comment<br/>@item.Date<br/>@item.WorkTimeHours
            </li>
        }
    }
</ul>